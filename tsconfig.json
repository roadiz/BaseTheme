{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "plugins": [
            { "name": "typescript-tslint-plugin" }
        ]
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "app/vue-shims.d.ts"
    ]
}
