<svg aria-hidden="true"
     class="{{ classes|join( '') }} icon-{{ icon }}" {% if id %}id="{{ id }}"{% endif %}
     width="{{ width|default(32) }}"
     height="{{ height|default(32) }}"
     viewBox="0 0 {{ width|default(32) }} {{ height|default(32) }}">
    <use xlink:href="{{ head.resourcesUrl }}svg/sprite.svg#icon-{{ icon }}"></use>
</svg>

