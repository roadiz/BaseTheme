{% extends "@BaseTheme/blocks/base.html.twig" %}

{% block innerContent %}
    <div class="container">
        <h2 class="page-block-title {{ blockClassPrefix }}-title">{{ nodeSource.title }}</h2>
        <div class="page-block-content {{ blockClassPrefix }}-content">
            {{- nodeSource.content|markdown -}}
        </div>
        <div class="page-block-images">
            {% for image in nodeSource.images %}
                {{ image|display(imageFormats.columnedImage) }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
